generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model utilizador {
  codutilizador Int            @id @default(autoincrement())
  nome          String         @unique
  password      String
  catalogAlbum  catalogAlbum[]

  @@map("utilizador_table") // Especifica o nome da tabela explicitamente
}

model album {
  codalbum     Int            @id @default(autoincrement())
  nome         String         @unique
  catalogAlbum catalogAlbum[]

  @@map("album_table") // Especifica o nome da tabela explicitamente
}

model catalogAlbum {
  codcatalogo  Int    @id @default(autoincrement())
  fkutilizador Int?
  fkalbum      Int?
  url          String

  utilizador utilizador? @relation(fields: [fkutilizador], references: [codutilizador])
  album      album?      @relation(fields: [fkalbum], references: [codalbum])

  @@map("catalog_album_table") // Especifica o nome da tabela explicitamente
}
